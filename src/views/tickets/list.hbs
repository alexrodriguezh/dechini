<div class="page">
    <div class="page-content d-flex align-items-stretch">
        {{> navigation }}
        <div class="content-inner">
            <!-- Page Header-->
            <header class="page-header">
                <div class="container-fluid">
                    <h2 class="no-margin-bottom">Dashboard</h2>
                </div>
            </header>
            <div class="page-content d-flex align-items-stretch">
                <div class="container p-4">
                    <div class="row">
                        {{#each tickets}}
                            <div class="col-md-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <a href="{{url}}" target="_blank">
                                            <h3 class="card-title text-uppercase">
                                                {{title}}
                                            </h3>
                                        </a>
                                        <p class="m-2">{{description}}</p>
                                        <p class="m-2">{{categoria}}</p>
                                        <p>{{timeago create_at}}</p>
                                        <a href="/tickets/delete/{{id}}" class="btn btn-danger">Borrar</a>
                                        <a href="/tickets/edit/{{id}}" class="btn btn-secondary">Editar</a>

                                    </div>
                                </div>
                            </div>
                            {{else}}
                                <div class="col-md-4 mx-auto">
                                    <card class="card card-body text-center">
                                        <p>No hay tickets guaradados a√∫n.</p>
                                        <a href="/tickets/add">Create uno</a>
                                    </card>
                                </div>
                        {{/each}}
                    </div>
                    
                </div>
            </div>
            {{> footer}}
        </div>
    </div>
</div>